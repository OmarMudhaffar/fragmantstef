<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient android:centerColor="#0ee"
                android:startColor="#0ee"
                android:endColor="#0ee"/>

            <corners android:radius="10dp"></corners>
            <stroke android:color="#fff"
                android:width="2dp"
                ></stroke>
        </shape>


    </item>

    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

     <gradient android:centerColor="#ee0"
         android:startColor="#ee0"
         android:endColor="#ee0"/>

            <corners android:radius="10dp"></corners>
            <stroke android:color="#e00"
                android:width="2dp"
                ></stroke>
        </shape>

    </item>

</selector>